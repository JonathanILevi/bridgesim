{
  "name": "bridgesim",
  "version": "1.0.0",
  "description": "It's a starship bridge simulator.",
  "main": "index.js",
  "devDependencies": {
    "browserify": "^13.0.1",
    "chai": "^3.5.0",
    "crisper": "^2.0.2",
    "html-minifier": "^2.1.2",
    "mocha": "^2.4.5",
    "uglify-js": "^2.6.2",
    "vulcanize": "^1.14.8",
    "watchify": "^3.7.0"
  },
  "scripts": {
    "test": "tsc && mocha $(find . -name '*_test.js' ! -path './node_modules/*' ! -path './bower_components/*'| tr -s '\n' ' ')",
    "watch": "tsc --watch & watchify $(find client/ -name '*.js' ! -name '*_test.js' | tr -s '\n' ' ') --outfile out.js --debug --verbose",
    "watch-test": "npm run watch-ts & mocha $(find . -name '*_test.js' ! -path './node_modules/*' ! -path './bower_components/*'| tr -s '\n' ' ') --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aomarks/bridgesim.git"
  },
  "author": "",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/aomarks/bridgesim/issues"
  },
  "homepage": "https://github.com/aomarks/bridgesim#readme"
}
